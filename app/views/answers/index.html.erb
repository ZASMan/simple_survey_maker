<div class="row">
  <div class="col-md-12">
  <h1 class="text-center">Answers</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Status</th>
        <th>Body</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @answers.each do |answer| %>
        <tr>
          <td class="<%= answer.display_status_class %> capitalize font-weight-bold text-center">
            <%= answer.status %>
          </td>
          <td>
            <%= answer.preview_body_if_long %>
            <%= link_to answer.show_link_message, edit_answer_path(answer) %>    
          </td>
          <td>
            <%= answer.created_at %>    
          </td>
          <td>
            <%= link_to "View/Edit", edit_answer_path(answer), class: "btn btn-success" %> |
            <%= button_to "Delete", answer, method: :delete, data: {confirm: "Are you sure you  want to delete this confession?"}%>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New Answer", new_answer_path, class: "btn btn-primary" %>
  </div>
</div>
