<%= simple_form_for(@answer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body %>
    <%= f.input :status, collection: Answer::ANSWER_STATUSES %>
    <%= f.association :question %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
