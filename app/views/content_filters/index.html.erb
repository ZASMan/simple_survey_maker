<h1>Content Filters</h1>

<table class="table">
  <thead>
    <tr>
      <th>Filter list</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @content_filters.each do |content_filter| %>
      <tr>
        <td><%= content_filter.filter_list %></td>
        <td><%= link_to 'Show', content_filter %></td>
        <td><%= link_to 'Edit', edit_content_filter_path(content_filter) %></td>
        <td><%= link_to 'Destroy', content_filter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>